@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TestRazorV</title>
</head>
<body>
    <div>
        @for (int i = 0; i < 10; i++)
        { 
            <b>@i</b>
            if (i % 2 == 0)
            { 
                @: Even
            }
            else
            { 
                @: Neven
            }
            
            <br>
        }
    </div>
</body>
</html>
